@using TwitterRuRu.Models
@model HomeViewModel
@{
    ViewBag.Title = "TwitterRuR7u";
}

<div class="jumbotron">
    <h1>TwitterRuRu - Twitter for Owls</h1>
    @using (Html.BeginForm("CreateTweet", "Home", FormMethod.Post,
                                      new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)
        <fieldset>
            @Html.TextBoxFor(x => x.Tweet)
            <input type="submit" value="Zap!" />
        </fieldset>
    }

</div>

